<!DOCTYPE html>
<html lang="en">
    <title>General</title>
    <style>
        h1{
            font-size: 20px;
            position: relative;
            left: 10px;
            color:aliceblue
        }
        body{
            margin: 0px;
            padding: 0px;
            width: 100%;
            top: 100px;
            background: url('general.webp')no-repeat;
            background-position: auto;
            background-size: cover;
        }
        .hidden {
            display: none;
        }

        #title{
            position: relative;
            left: 20px;
        }


        #topBar{
            padding-bottom: 0.2px;
            padding-top: 0.2px;
            width: 100%;
            background-color: #282828;
            color: rgb(180, 171, 171);
        }

        #inputBox {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: rgb(216, 207, 207);
            padding: 20px;
            box-shadow: 0px -2px 5px black;
        }

 
        .posts {
            border: white solid 2px;
            padding-left: 20px;
            padding-right: 0px;
            padding-bottom: 20px;
            width: 600px;
            margin: 10px;
            border-radius: 26px;
            background-color: white;
            color: black;
            opacity: 1;
        }

    </style>
    <head>
        <div id="topBar">
            <h1 id="title">General</h1>
        </div>
        <link rel="stylesheet" href="/general.css">
    </head>
    
    <body>
        <div class="bg">
            <div id="posts" class="word-box">
                <% generalPosts.forEach(post => { %>
                    <br>
                    <div class="posts">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <p>posted by <%= post.username %></p>
                    <br><br><br>
                    
                    <% if(post.username === username && username != 'admin1' && username != 'Admin') { %>
                        <form action="/generalDeletePost" method="POST" id="deletePost">
                            <input type="hidden" name="postId" value="<%= post.id %>"> <!-- Assuming each post has an ID -->
                            <button>Delete Post</button>
                        </form>
                    <% } if(username == 'admin1' || username == 'Admin') {%>
                        <form action="/generalDeletePost" method="POST" id="deletePost">
                        <input type="hidden" name="postId" value="<%= post.id %>"> <!-- Assuming each post has an ID -->
                        <button>Delete Post</button>
                    </form> 
                    </div>
                    <% }%>
                <% }); %>
            </div>
        </div>
        <div>
            <button id="addPostBtn">Write a post</button>
        </div>
        <div id="inputBox" class="hidden">
        <button id="closeForm">X</button>
        <form action="/general" method="POST" id="postForm">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
            <br><br>
            <label for="content">Write sth: </label>
            <textarea id="content" name="content" required></textarea>
            <input type="hidden" value="general" name="group">
            <!-- Make sure 'username' is defined and passed to the template -->
            <input type="hidden" value="<%= username %>" name="username">
            <br><br>
            <button>Post</button>
        </form>
        </div>
        <script>

            document.getElementById("addPostBtn").addEventListener("click", function() {
                document.getElementById("inputBox").classList.remove("hidden")
            })

            document.getElementById("closeForm").addEventListener("click", function() {
                document.getElementById("inputBox").classList.add("hidden")
            })

        </script>
    </body>
</html>