<!DOCTYPE html>
<html lang="en">
    <title>General</title>
    <head>
        <h1>Post</h1>
        <link rel="stylesheet" href="/general.css">
    </head>
    <body>
        <div class="bg">
            <div id="posts" class="word-box">
            <% generalPosts.forEach(post => { %>
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
                <p>posted by <%= post.username %></p>
                <br><br><br>
            <% }); %>
            </div>
        </div>
        
        <form action="/general" method="POST" id="postForm">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
            <br><br>
            <label for="content">Write sth: </label>
            <input type="text" id="content" name="content" required>
            <input type="hidden" value="general" name="group">
            <!-- Make sure 'username' is defined and passed to the template -->
            <input type="hidden" value="<%= username %>" name="username">
            <br><br>
            <button>Post</button>
        </form>
    </body>
</html>