    <head>
        <div id="topBar">
            <a href="intro" class="title">General</a>
        </div>
        <br>
        <br>
        <link rel="stylesheet">
        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    </head>
    <body>
        <a href="dashboard" id="backButton">Back to Dashboard</a>
        <div>
            <button id="addPostBtn">Write a post</button>
        </div>
        <div id="inputBox" class="hidden">
            <button id="closeForm">X</button>
            <form action="/general" method="POST" id="postForm">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                <br><br>
                <label for="content">Write sth: </label>
                <textarea id="content" name="content" required></textarea>
                <input type="hidden" value="general" name="group">
                <!-- Make sure 'username' is defined and passed to the template -->
                <input type="hidden" value="<%= username %>" name="username">
                <br><br>
                <button>Post</button>
            </form>
            </div>
        <div class="bg">
            <div id="posts" class="word-box">
                <% reversedPosts.forEach(post => { %>
                    <br>
                    <div class="posts">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <p>posted by <%= post.username %></p>
                    
                    <br><br><br>
                    <div>
                        <p>posted on <%= post.postingtime %></p>
                    </div>
                    
                    <% if(post.username === username && username != 'admin1' && username != 'Admin') { %>
                        <form action="/generalDeletePost" method="POST" id="deletePost">
                            <input type="hidden" name="postId" value="<%= post.id %>"> <!-- Assuming each post has an ID -->
                            <button>Delete Post</button>
                        </form>
                    <% } if(username == 'admin1' || username == 'Admin') {%>
                        <form action="/generalDeletePost" method="POST" id="deletePost">
                        <input type="hidden" name="postId" value="<%= post.id %>"> <!-- Assuming each post has an ID -->
                        <button>Admin Delete</button>
                    </form> 
                    <% }%>

                </div>
                    <form action="/likeGeneralPost" method="POST" id="likePost" class="like-form">
                        <input type="hidden" name="postId" value="<%= post.id %>">
                        <input type="hidden" name="username" value="<%= username %>">
                        <input type="hidden" name="forum" value="general">
                        <button class="heart-button" onclick="toggleHeart()">
                            <ion-icon name="heart-outline" id="heartIconOutline"></ion-icon>
                            <ion-icon name="heart" id="heartIconFilled"></ion-icon>
                        </button>
                    </form>
                    <div>
                    <%var likes = 0 %>
                    <% generalPostsLikes.forEach(like => { %>
                        <% if(like.postId == post.id) { %>
                            <% ++likes %>
                        <%  } %>
                    <% }) %>

                    <h1 class="postLikes">Likes: <%= likes %></h1>

                    <% generalPostsLikes.forEach(like => { %>
                            <% if(like.username == username && like.postId == post.id) { %>
                                <h3 class="Liked">Liked!</h3>
                            <% } %>
                    <% }) %>

                   <% })%>
                    </div>
            </div>
        </div>
        <script>
            document.getElementById("addPostBtn").addEventListener("click", function() {
                document.getElementById("inputBox").classList.remove("hidden")
            })

            document.getElementById("closeForm").addEventListener("click", function() {
                document.getElementById("inputBox").classList.add("hidden")
            })


            // Get all like forms
            const likeForms = document.querySelectorAll('.like-form');

            likeForms.forEach(form => {
            const postId = form.querySelector('input[name="postId"]').value;
            const heartButton = form.querySelector('.heart-button');
            const likeCount = form.querySelector('.postLikes');
            const likedMessage = form.querySelector('.Liked');
            function toggleHeart() {
  var btn = document.querySelector(".heart-button");
  btn.classList.toggle("active");
}
            });

        </script>
        <div id="spacing"></div>
    </body>
</html>